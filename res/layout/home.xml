<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/loggedInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="10pt" >

    </TextView>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/myPlacesButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/button_back"
                android:padding="30dp"
                android:src="@drawable/tag" />

            <ImageButton
                android:id="@+id/nearMeButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/button_back"
                android:padding="30dp"
                android:src="@drawable/places" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nearMeLabel"
                android:gravity="center"
                android:text="Near Me"
                android:textSize="10pt" >
            </TextView>
            
            <TextView
                android:id="@+id/nearMeLabel"
                android:gravity="center"
                android:text="My Places"
                android:textSize="10pt" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/rewardsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/button_back"
                android:padding="30dp"
                android:src="@drawable/rewards" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/button_back"
                android:padding="30dp"
                android:src="@drawable/settings" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rewardsLabel"
                android:gravity="center"
                android:text="Rewards"
                android:textSize="10pt" >
            </TextView>

            <TextView
                android:id="@+id/settingsLabel"
                android:gravity="center"
                android:text="Settings"
                android:textSize="10pt" >
            </TextView>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/writeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Write Tags" />

</LinearLayout>